<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:startColor="#FFD645"
                android:endColor="#701F84"
                android:type="linear" />
            <corners android:radius="@dimen/dp_16" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#66493A97" />
            <corners android:radius="@dimen/dp_16" />
        </shape>
    </item>

</layer-list>
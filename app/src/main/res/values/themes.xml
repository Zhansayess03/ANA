<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ana" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.Ana" parent="Base.Theme.Ana" />

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/purple</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/purple</item>
    </style>

    <style name="FragmentScreen">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="BottomNavigation">

    </style>

    <style name="ToolbarText">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ButtonText">
        <item name="android:textColor">#ffffff</item>
        <item name="fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>